---
import { contactInfo } from 'src/data/contact'
import PageLayout from '../../layouts/BaseLayout.astro'
import { getLangFromUrl, useTranslations } from 'src/i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<PageLayout meta={{ title: 'Portfolio - Michael Schmidt' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<h1 class='text-3xl'>{t('imprint')}</h1>
		<div class='col-span-1 grid'>
			<p>{contactInfo.name}</p>
			<p>{contactInfo.address}</p>
			<p>Mobile: {contactInfo.mobile}</p>
			<p>E-Mail: {contactInfo.email}</p>
		</div>
		<div class='col-span-1 grid'>
			<h3 class='text-xl'>{t('imprint.agb')}</h3>
			<h2 class='text-2xl'>{t('imprint.responsesiblity')}</h2>
			<p>
				{t('imprint.responsesiblity.text')}
			</p>
		</div>
		<div class='col-span-1 grid'>
			<h2 class='text-2xl'>{t('imprint.links')}</h2>
			<p>
				{t('imprint.links.text')}
			</p>
		</div>
		<div class='col-span-1 grid'>
			<h2 class='text-2xl'>{t('imprint.copy')}</h2>
			<p>
				{t('imprint.copy.text')}
			</p>
		</div>
	</div>
</PageLayout>
