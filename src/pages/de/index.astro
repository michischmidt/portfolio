---
import PageLayout from '../../layouts/BaseLayout.astro'
import Section from '../../components/Section.astro'
import Card from '../../components/Card.astro'
import ProjectCard from '../../components/ProjectCard.astro'
import Label from '../../components/Label.astro'
import SkillLayout from '../../components/SkillLayout.astro'

import { Image } from 'astro:assets'
import astro from '../../assets/michaelschmidt.png'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'
import skills from 'src/data/skills'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const languages = ['German (Native)', 'English (Fluent)', 'Russian (Intermediate)']
---

<PageLayout meta={{ title: 'Portfolio - Michael Schmidt' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<div class='flex items-center justify-center'>
			<section class='grid grid-cols-1 items-center gap-x-8 gap-y-7 md:grid-cols-2'>
				<div
					class='flex h-40 w-40 items-center justify-center justify-self-center rounded-full bg-[#E6F6FF] md:justify-self-end'
				>
					<div class='flex h-28 w-28 items-center justify-center rounded-full'>
						<Image src={astro} alt='profile photo' class='h-auto w-full' loading='eager' />
					</div>
				</div>
				<div class='flex flex-col items-center gap-y-4'>
					<h1 class='text-3xl font-bold'>Michael Schmidt</h1>
					<div
						class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm transition-all hover:shadow-md'
					>
						<span class='relative flex items-center justify-center'>
							<span
								class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
							></span>
							<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
						</span>
						<p class='font-medium'>Full Stack Software Entwickler</p>
					</div>
					<div class='flex flex-wrap justify-center gap-x-7 gap-y-3'>
						<Label
							as='a'
							href='https://www.google.com/maps/place/Regensburg/@49.0215514,12.0279406,12z/data=!3m1!4b1!4m6!3m5!1s0x479fc19872222ef7:0x41d25a40937cb10!8m2!3d49.0134297!4d12.1016236!16zL20vMGQzNF8?authuser=0&entry=ttu'
							target='_blank'
							title={t('contact.location')}
						>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								viewBox='0 0 24 24'
								class='h-5 w-5'
								slot='icon'
							>
								<path
									fill='currentColor'
									d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
								></path>
							</svg>
						</Label>
						<Label title='schmidt.m.work@gmail.com'>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								fill='none'
								viewBox='0 0 24 24'
								stroke-width='0.8'
								stroke='currentColor'
								class='h-5 w-5'
								slot='icon'
							>
								<path
									stroke-linecap='round'
									stroke-linejoin='round'
									d='M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75'
								></path>
							</svg>
						</Label>
						<Label
							title='LinkedIn'
							as='a'
							href='https://www.linkedin.com/in/michael-schmidt-081a4b17b/'
							target='_blank'
						>
							<svg
								xmlns='http://www.w3.org/2000/svg'
								viewBox='0 0 16 16'
								slot='icon'
								class='h-5 w-5 text-foreground/75'
							>
								<path
									fill='currentColor'
									d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
								></path>
							</svg>
						</Label>
					</div>
				</div>
			</section>
		</div>
		<Section title='Abstract'>
			<p class='text-muted-foreground'>
				{t('abstract.text')}
			</p>
		</Section>
		<Section title={t('exp.title')}>
			<Card
				heading={t('exp.gg')}
				subheading={t('exp.gg.job')}
				date={t('exp.gg.date')}
				altText='Software Engineer & IT-Consultant'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						{t('exp.gg.point1')}
					</li>
					<li>{t('exp.gg.point2')}</li>
				</ul>
			</Card>
			<Card
				heading={t('exp.trifull')}
				subheading={t('exp.trifull.job')}
				date={t('exp.trifull.date')}
				altText='Software Engineer & IT-Consultant'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						{t('exp.trifull.point1')}
					</li>
					<li>
						{t('exp.trifull.point2')}
					</li>
					<li>
						{t('exp.trifull.point3')}
					</li>
					<li>
						{t('exp.trifull.point4')}
					</li>
					<li>
						{t('exp.trifull.point5')}
					</li>
					<li>
						{t('exp.trifull.point6')}
					</li>
					<li>
						{t('exp.trifull.point7')}
					</li>
				</ul>
			</Card>
			<Card
				heading={t('exp.tri')}
				subheading={t('exp.tri.job')}
				date={t('exp.tri.date')}
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						{t('exp.tri.point1')}
					</li>
					<li>
						{t('exp.tri.point2')}
					</li>
					<li>{t('exp.tri.point3')}</li>
				</ul>
			</Card>
			<Card
				heading={t('exp.daimler')}
				subheading={t('exp.daimler.job')}
				date={t('exp.daimler.date')}
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						{t('exp.daimler.point1')}
					</li>
					<li>
						{t('exp.daimler.point2')}
					</li>
					<li>
						{t('exp.daimler.point3')}
					</li>
				</ul>
			</Card>
		</Section>
		<Section title={t('edu.title')}>
			<Card
				heading={t('edu.uni')}
				subheading={t('edu.uni.degree')}
				date={t('edu.uni.date')}
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			/>
			<Card
				heading={t('edu.oth')}
				subheading={t('edu.oth.degree')}
				date={t('edu.oth.date')}
				altText='Lorem, ipsum dolor sit'
				imageClass='h-12 w-auto md:-left-16'
			/>
		</Section>
		<Section title={t('skills.title')}>
			<SkillLayout title={t('skills.languages')} skills={languages} />
			<SkillLayout title={t('skills.programming')} skills={skills.programming} />
			<SkillLayout title='Frontend' skills={skills.frontend} />
			<SkillLayout title='Backend' skills={skills.backend} />
			<SkillLayout title={t('skills.database')} skills={skills.database} />
			<SkillLayout title='Cloud' skills={skills.cloud} />
			<SkillLayout title='Design' skills={skills.design} />
			<SkillLayout title={t('skills.others')} skills={skills.others} />
		</Section>
		<Section title={t('projects.title')}>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://frontstart.de'
					heading={t('projects.fs.title')}
					subheading={t('projects.fs.text')}
					imagePath='/src/assets/frontstart.png'
					altText='Example'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Coming soon...'
					subheading=''
					imagePath='/src/assets/coming-soon.png'
					altText='Lorem, ipsum dolor sit'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title={t('certs.title')}>
			<Card
				heading={t('certs.oose')}
				subheading='Infrastructure, Container & Cloud Native'
				imagePath='/src/assets/about-astro.png'
				altText='Lorem, ipsum dolor sit'
				imageClass='h-11 w-auto md:-left-16'
			/>
		</Section>
	</div>
</PageLayout>
